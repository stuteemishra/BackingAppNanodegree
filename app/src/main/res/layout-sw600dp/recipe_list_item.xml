<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/defaultrecipeimage"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview1_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:contentPadding="12dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/recipe_image_default"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/defaultrecipeimage"/>

        <TextView
            android:id="@+id/tv_recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/recipe_image"
            android:layout_alignTop="@id/recipe_image"
            android:layout_alignRight="@id/recipe_image"
            android:layout_alignBottom="@id/recipe_image"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="1dp"
            android:padding="1dp"
            android:textColor="#212121"
            android:gravity="center"
            android:textSize="22sp"
            android:fontFamily="sans-serif-condensed"/>



    </android.support.v7.widget.CardView>


</RelativeLayout>